{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "description": "基础配置模板(不直接使用)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "base",
      "description": "Windows 平台基础配置",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_WINDOWS_EXPORT_ALL_SYMBOLS": "ON"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "inherits": "base",
      "description": "Linux 平台基础配置",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "windows-debug",
      "displayName": "Windows Debug",
      "description": "Windows 平台调试版本",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "ENABLE_ASAN": "OFF"
      }
    },
    {
      "name": "windows-release",
      "displayName": "Windows Release",
      "description": "Windows 平台发布版本",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Linux 平台调试版本(带 AddressSanitizer)",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "ENABLE_ASAN": "ON",
        "CMAKE_CXX_FLAGS": "-fsanitize=address -fno-omit-frame-pointer"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Linux 平台发布版本(启用 LTO 优化)",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "OFF",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-debug",
      "displayName": "构建 Windows Debug",
      "configurePreset": "windows-debug",
      "configuration": "Debug",
      "jobs": 8,
      "verbose": false
    },
    {
      "name": "windows-release",
      "displayName": "构建 Windows Release",
      "configurePreset": "windows-release",
      "configuration": "Release",
      "jobs": 8,
      "cleanFirst": true
    },
    {
      "name": "linux-debug",
      "displayName": "构建 Linux Debug",
      "configurePreset": "linux-debug",
      "jobs": 4,
      "verbose": true
    },
    {
      "name": "linux-release",
      "displayName": "构建 Linux Release",
      "configurePreset": "linux-release",
      "jobs": 4,
      "cleanFirst": true
    }
  ],
  "testPresets": [
    {
      "name": "windows-debug",
      "displayName": "测试 Windows Debug",
      "configurePreset": "windows-debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "linux-debug",
      "displayName": "测试 Linux Debug",
      "configurePreset": "linux-debug",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false,
        "jobs": 4
      }
    }
  ]
}
